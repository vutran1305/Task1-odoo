<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
            <record id="order_form_view_product" model="ir.ui.view">
            <field name="name">Customer order form </field>
            <field name="model">order.product</field>
            <field name="arch" type="xml">
              <form string="To-do Task">
                <group>
                  <field name="customer_order"/>
                  <field name="quantity"/>
                    <field name="priceOneProduct" />
                  <field name="total" readonly="1" force_save="1" />
                    <field name = "discount_code" readonly="1"  force_save="1"/>
                    <field name="Sale_order_discount_estimated" readonly="1" force_save="1"/>
                     <field name="payment" readonly="1" force_save="1" />
                    <field name="order_valid" readonly="1" force_save="1" />


                </group>
              </form>
            </field>
  </record>

        <record id="order_tree_view" model="ir.ui.view">
            <field name="name">order.tree.view</field>
            <field name="model">order.product</field>
            <field name="arch" type="xml">
                <tree string="Order" default_order="create_date desc">
                    <field name="customer_order"/>
                    <field name="quantity"/>
                    <field name="priceOneProduct"/>
                    <field name="total"/>
                    <field name="discount_code" />
                    <field name="Sale_order_discount_estimated"/>
                    <field name="payment"/>
                    <field name = 'order_valid' />
                </tree>
            </field>
        </record>

<!--        Action trỏ đến view-->
        <record id="action_order_product" model="ir.actions.act_window">
            <field name="name">Order Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">order.product</field>
            <field name="domain">[('order_valid','=',True)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('order_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('order_form_view_product')})]"/>
          </record>


   <menuitem id="menu_order"
            name="Order product"
           action="action_order_product"
            sequence="9"
            groups="base.group_user"
            parent = "ShopSale_root"/>
    </data>
</odoo>