<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>




<!--        Action trỏ đến view -->
        <record id="action_customer_valid" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer</field>
            <field name="domain">[('code_valid','=',True)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('customer_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('customer_form_view')})]"/>
          </record>



        <menuitem id="menu_customer_valid"
            name="Customer Valid"
            action="action_customer_valid"
            sequence="2"
            groups="base.group_user"
            parent = "ShopSale_root"/>
    </data>
</odoo>