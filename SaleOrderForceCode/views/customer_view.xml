<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

         <record id="customer_form_view" model="ir.ui.view">
            <field name="name">customer.form.view</field>
            <field name="model">customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Kittie"/></h1>
                        </div>
                        <group name="images">
                            <group>
                                <field name="birthday"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="code"/>
                                 <field name="code_valid"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_tree_view" model="ir.ui.view">
            <field name="name">customer.tree.view</field>
            <field name="model">customer</field>
            <field name="arch" type="xml">
                <tree string="Pets" default_order="create_date desc">
                    <field name="name"/>
                    <field name="birthday"/>
                    <field name="code"/>
                    <field name="gender"/>

                  
                </tree>
            </field>
        </record>



<!--        Action trỏ đến view -->
        <record id="action_customer" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('customer_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('customer_form_view')})]"/>
          </record>


        <menuitem id="ShopSale_root"
            name="Shop sale"
            sequence="10"/>

        <menuitem id="menu_customer"
            name="Customer"
            action="action_customer"
            sequence="1"
            groups="base.group_user"
            parent = "ShopSale_root"/>

    </data>
</odoo>